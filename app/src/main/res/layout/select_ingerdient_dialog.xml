<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/select_ingredient_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:hintText="Vælg ingrediens"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/spinner_ingredient_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Indtast mængde"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/select_ingredient_spinner"
        app:layout_constraintStart_toStartOf="@+id/select_ingredient_spinner"
        app:layout_constraintTop_toBottomOf="@+id/select_ingredient_spinner">

    </EditText>

</androidx.constraintlayout.widget.ConstraintLayout>



